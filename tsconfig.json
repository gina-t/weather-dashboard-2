{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["server/src/**/*", "client/src/**/*"],
  "exclude": ["node_modules", "dist"]
}